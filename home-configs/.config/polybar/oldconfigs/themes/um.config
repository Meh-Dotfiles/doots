[colors]
foreground = #efefef
background = #070C0F
modb       = #070E14
modb1      = #101214
modb2      = #101214

red    = #F07178
green  = #C3E88D
yellow = #FFCB6B
blue   = #89DDFF
violet = #C792EA
cyan   = #82AAFF
white  = #c6c8d1

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/top]
monitor = eDP1
width    = 100%
height   = 32
offset-x = 0
offset-y = 0

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = icomoon:size=8:antialias=true;-1
font-1 = Wuncon Siji:size=9:;-1

modules-left   = date1 volume cpu weather
modules-center = workspaces
modules-right  =  previous playpause next powermenu

tray-position    = off
tray-padding     = 2
tray-transparent = false
tray-detached    = false
tray-background  = ${colors.modb}

spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>

format-volume-background = ${colors.modb}
format-volume-padding    = 2

module-margin-right = 0
ramp-volume-0       = 
ramp-volume-1       = 
ramp-volume-2       = 

ramp-volume-foreground = ${colors.green}

label-muted-padding    = 2
label-muted            =  muted
label-muted-background = ${colors.modb}

;

[module/date1]
type                     = internal/date
interval                 = 1
date                     = " %I:%M"
format-prefix            = 
format-prefix-foreground = ${colors.red}
format-background        = ${colors.modb}
format-padding           = 2

[module/powermenu]
type = custom/menu

label-open                 = 
label-open-foreground      = ${colors.red}
label-open-background      = ${colors.modb2}
label-open-padding         = 2
label-close                = ✕
label-close-padding        = 2
label-close-foreground     = $[colors.red]
label-separator            = |
label-separator-foreground = #666666

menu-0-0      = 
menu-0-0-exec = menu-open-1
menu-0-1      = 
menu-0-1-exec = menu-open-2
menu-0-2      = "  "
menu-0-2-exec = menu-open-3

menu-1-0      = ✕
menu-1-0-exec = menu-open-0
menu-1-1      = ✓
menu-1-1-exec = systemctl reboot

menu-2-0      = ✓
menu-2-0-exec = systemctl poweroff
menu-2-1      = ✕
menu-2-1-exec = menu-open-0

menu-3-0      = ✓
menu-3-0-exec = herbstclient quit
menu-3-1      = ✕
menu-3-1-exec = menu-open-0

[module/hlws]
format-font       = 1
type              = custom/script
exec              = python3 scripts/hlws.py
scroll-down       = exec herbstclient use_index +1
scroll-up         = exec herbstclient use_index -1
interval          = 0.01
format-foreground = ${colors.foreground}
format-background = ${colors.modb2}
format-padding    = 2

[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec playerctl previous
format-foreground = ${colors.violet}
format-background = ${colors.modb1}
format-padding    = 1

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec playerctl next
format-foreground = ${colors.violet}
format-background = ${colors.modb1}
format-padding    = 1

[module/spotipy]
type              = custom/script
exec              = python3 /home/pringle/.config/polybar/scripts/spotify.py
exec-if           = pgrep spotify > /dev/null
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.foreground}
format-background = ${colors.modb1}
format-padding    = 1

[module/playpause]
type              = custom/script
exec              = python3 /home/pringle/.config/polybar/scripts/playpause.py
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.violet}
format-background = ${colors.modb1}
format-padding    = 2


[module/cpu]
type                     = internal/cpu
label                    = %percentage-core1%%
format-prefix            = " "
format-prefix-foreground = ${colors.yellow}
format-background        = ${colors.modb}
format-padding           = 2

[module/weather]
type                     = custom/script
interval                 = 10
format                   = <label>
format-padding           = 2
format-prefix            = " "
;format-suffix            = "°C"
format-prefix-foreground = ${colors.blue}
format-background        = ${colors.modb}
exec                     = /home/pringle/.config/polybar/scripts/weather

[module/ewmh]
type = internal/xworkspaces

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; Create click handler used to focus desktop
; Default: true
enable-click = false

; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = false

line-size = 3
line-color = #f00

[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true
format-padding = 1
Additional formatting
icon-0 = 1; 
icon-1 = 2; 
icon-2 = 3; 
icon-3 = 4; 
icon-4 = 5;
icon-5 = 6;
icon-6 = 7;
icon-7 = 8;
icon-8 = 9;
icon-9 = 10;
;icon-default = 

;

format = <label-state>
label-monitor =  %icon%

label-active = " %icon% "
label-active-foreground = ${colors.foreground}
label-active-background = ${colors.modb}
;label-active-underline = #F5166A

label-occupied = " %icon% "
label-occupied-underline = #5E81AC
label-occupied-background = ${colors.background}
label-occupied-foreground = #34C8BC

label-urgent = " %icon%"
label-urgent-foreground = #ffffff
label-urgent-background = ${colors.background}
label-urgent-underline = #34C8BC

label-empty = " %icon% "
label-empty-foreground = ${colors.foreground}
label-empty-background = #0E1822