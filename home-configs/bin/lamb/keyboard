#!/bin/zsh

source "$HOME/.dotfiles/config.sh"

LAYOUT=$(setxkbmap -print -verbose 10 | awk '$1 == "layout:" { print $2 }')
FIFO="$PANEL_FIFO_PATH"

case $1 in
  get)
    echo "$LAYOUT"
    ;;
  toggle)
    if [[ "$LAYOUT" == "$2" ]]; then
      LAYOUT=$3
    else
      LAYOUT=$2
    fi
    setxkbmap $LAYOUT
    xmodmap ~/.Xmodmap
    [ -e "$FIFO" ] && echo "K" > "$FIFO"
    ;;
esac

