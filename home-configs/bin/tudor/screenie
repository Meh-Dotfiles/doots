#!/bin/sh -x

select="false"
test "$1" = "-s" && select="true"

mkdir -p "$HOME/tmp/screenies"

number="$(ls -1 $HOME/tmp/screenies | cut -d'.' -f1 | sort -n | tail -n 1)"
number="$(( number + 1 ))"

opts=""
test "$select" = "true" && opts="-s --noopengl"

maim $opts "$HOME/tmp/screenies/${number}.png"

. $HOME/bin/wmrc
pgrep "notifyd" > /dev/null && echo "%{F$PANEL_ACCENT_COLOR}î€®%{F-} Screenshot taken" > "$NOTIFY_FIFO_PATH" || notify-send "Screenie" "Screenshot taken"
