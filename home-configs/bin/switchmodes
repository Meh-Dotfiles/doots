#!/bin/bash
# Script to toggle between working and normal i3 modes.
if cat $HOME/.i3/config | grep -q "gaps inner 25" &>/dev/null; then
    sed -i -e 's/gaps inner 25/gaps inner 0/g' /home/hrfee/.i3/config && i3 restart
else
    sed -i -e 's/gaps inner 0/gaps inner 25/g' /home/hrfee/.i3/config && i3 restart
  fi
  
